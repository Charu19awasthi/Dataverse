name: Auto Label PR

on:
  pull_request:
    types: [opened, reopened, edited]

jobs:
  label_pr:
    runs-on: ubuntu-latest
    permissions:
      pull-requests: write
    steps:
      - name: Label PR with Custom Color
        uses: actions/github-script@v6
        with:
          github-token: ${{secrets.GITHUB_TOKEN}}
          script: |
            const pr = context.payload.pull_request;

            // Define the label name and color
            const label = 'Review Queued';
            const color = 'faff00';  // Custom color hex code

            // Function to create or update the label
            const createOrUpdateLabel = async (label, color) => {
              try {
                await github.rest.issues.getLabel({
                  owner: context.repo.owner,
                  repo: context.repo.repo,
                  name: label
                });

                // Update label color if it exists
                await github.rest.issues.updateLabel({
                  owner: context.repo.owner,
                  repo: context.repo.repo,
                  name: label,
                  color: color
                });
              } catch (error) {
                // Create the label if it does not exist
                await github.rest.issues.createLabel({
                  owner: context.repo.owner,
                  repo: context.repo.repo,
                  name: label,
                  color: color,
                  description: `Waiting for the Dataverse's Maintainer to review this PR.`
                });
              }
            };

            // Ensure the label exists or update it if needed
            await createOrUpdateLabel(label, color);

            // Apply the label to the pull request
            await github.rest.issues.addLabels({
              owner: context.repo.owner,
              repo: context.repo.repo,
              issue_number: pr.number,
              labels: [label]
            });
